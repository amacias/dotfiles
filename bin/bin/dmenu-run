#!/bin/sh
# Modified `dmenu_run` script to open on kitty apps on a specified list.
# Idea from:
# https://github.com/beloglazov/arch-xmonad-zsh/blob/master/home/bin/dmenu-run
cachedir=${XDG_CACHE_HOME:-"$HOME/.cache"}
if [ -d "$cachedir" ]; then
	cache=$cachedir/dmenu_run
else
	cache=$HOME/.dmenu_cache # if no xdg dir, fall back to dotfile in ~
fi
APP=$(
	IFS=:
	if stest -dqr -n "$cache" $PATH; then
		stest -flx $PATH | sort -u | tee "$cache" | dmenu "$@"
	else
		dmenu "$@" < "$cache"
	fi
)

if grep -q "$APP" ~/.config/dmenu/term-list; then
	kitty "$APP"
else
	echo "$APP" | ${SHELL:-"/bin/sh"}
fi

# [[ ! `grep -w "$APP" ~/.config/dmenu/term-list` ]] && echo $APP | ${SHELL:-"/bin/sh"}
# [[ `grep -w "$APP" ~/.config/dmenu/term-list` ]] && kitty "$APP"
