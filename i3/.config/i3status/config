# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "dpms"
order += "spotify"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery 0"
order += "disk /home/"
order += "sysdata c"
order += "sysdata r"
order += "volume master"
order += "tztime calendar"
# order += "tztime sf"
order += "tztime helsinki"
order += "tztime local"

spotify {
        color_paused = "FFFF00"
        format = "{artist}:{title}"
        format_down = ""
}

wireless _first_ {
        format_up = " %quality %essid"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = ""
}

battery 0 {
        format = "%status %percentage %remaining"
        status_chr = ""
        status_bat = ""
        status_full = ""
        format_down = ""  # Don't show when there's no battery
}

tztime calendar {
        format = " %a %d-%b"
        on_click 1 = "exec firefox calendar.google.com"
}

tztime sf {
        format = "SF %H:%M"
        timezone = "US/Pacific"
}

tztime helsinki {
        format = "HLK %H:%M"
        timezone = "Europe/Helsinki"
        # timezone = "Europe/Helsinki"
}

tztime local {
        format = "Local %H:%M"
}

sysdata c{
        format = "{cpu_usage:.2}%"
}

sysdata r{
        format = "{mem_used_percent:.2}%"
}

disk "/home/" {
        format = " %avail"
        on_click 1 = "exec thunar"
}

volume master {
  format = "♪%volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  on_click 1 = "exec pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -USR1 py3status"
  on_click 4 = "exec pactl set-sink-volume @DEFAULT_SINK@ +5% && killall -USR1 py3status"
  on_click 5 = "exec pactl set-sink-volume @DEFAULT_SINK@ -5% && killall -USR1 py3status"
}
